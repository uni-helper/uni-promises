{
  "name": "@uni-helper/uni-promises",
  "version": "0.1.5",
  "description": "uni-app Promise 化的 API",
  "keywords": [
    "uni-app",
    "uniapp",
    "uni",
    "promisify",
    "promise",
    "promisified",
    "api"
  ],
  "homepage": "https://github.com/uni-helper/uni-promises#readme",
  "bugs": {
    "url": "https://github.com/uni-helper/uni-promises/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uni-helper/uni-promises.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "check:deps": "taze -f",
    "check:types": "tsc --noEmit",
    "commit": "git-cz",
    "dev": "unbuild --stub",
    "lint": "conc \"pnpm:lint:eslint\" \"pnpm:lint:markdownlint\" \"pnpm:lint:publint\"",
    "lint:eslint": "eslint ./src --fix --cache --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:publint": "publint",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm install && pnpm run lint && bumpp",
    "prepare": "is-ci || simple-git-hooks"
  },
  "dependencies": {
    "@dcloudio/types": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/prompt": "^17.6.5",
    "@modyqyw/fabric": "^8.3.1",
    "@tsconfig/node18": "^2.0.1",
    "@types/node": "^18.16.18",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "bumpp": "^9.1.1",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.2",
    "markdownlint-cli": "^0.35.0",
    "prettier": "^2.8.8",
    "publint": "^0.1.12",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.10.2",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "vue": "^3.3.4"
  },
  "peerDependencies": {
    "typescript": "^4.8.0 || ^5.0.0",
    "vue": "^3.2.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "packageManager": "pnpm@8.6.3",
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
